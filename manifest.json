{
  "manifest_version": 3,
  "name": "AI Prompt Enhancer",
  "version": "1.0.0",
  "description": "Enhance your AI prompts directly in chat interfaces",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "https://chatgpt.com/*",
    "https://claude.ai/new*",
    "https://*.anthropic.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://*.anthropic.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Prompt Enhancer"
  }
  
  
}